
<header class="masthead2 d-flex">
    <div class="container p-4">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card text-center shadow-lg" style="border-radius: 10px; background-color: #f8f9fa;">
                    <div class="card-header" style="background-color: #343a40; color: #fff; border-radius: 10px 10px 0 0;">
                        <h3>Editar</h3>
                    </div>
                    <div class="card-body">
                        <form action="/salas/edit/{{sala.id}}" method="POST">
                            <div class="form-group">
                                <input type="text" name="title" class="form-control" placeholder="Title" value="{{sala.title}}"
                                       autofocus>
                            </div>
                            <div class="form-group">
                                <input type="xml" name="xml" class="form-control" placeholder="URL" value="{{sala.xml}}">
                            </div>
                            <div class="form-group">
                    <textarea name="description" rows="2" class="form-control"
                              placeholder="Description">{{sala.description}}</textarea>
                            </div>
                            <div class="form-group">
                                <button class="btn btn-success btn-block">
                                    Update
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>