<div class="container p-4">
    <div class="row">
        <form action="/salas/compartir/{{idSala}}" method="POST">
            <select name="idUsuario" id="select-users" class="form-control" onchange="habilitar()">
                <option value="nulo">Seleccione un USUARIO</option>
                {{#each users}}
                <option value="{{id}}">{{username}}, {{correo}}</option>
                {{/each}}
            </select>
            {{!-- <input type="text" class="form-control" name="idUsuario" placeholder="idUsuario"> --}}
            <button class="btn btn-success btn-block">Compartir</button>
        </form>

        </button>
        {{#each users}}
        <div class="col-md-4 my-3">
            <div class="card text-center">
                <div class="card-body">
                    <a href="" target="_blank">
                        <h3 class="card-title text-uppercase">
                            {{username}}
                        </h3>
                    </a>
                    <p class="m-3">{{correo}}</p>
                    <input type="text" class="form-control" name="id" value="{{id}}">

                </div>
            </div>
        </div>
        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p>No hay ninguna sala para este usuario.</p>
                <a href="/salas/add">Crea Uno!</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>